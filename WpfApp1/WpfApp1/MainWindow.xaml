<Window x:Class="ShiftRight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shift Right" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Grid.Column="0" Stretch="Uniform"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
            <TextBlock Text="N (%)" HorizontalAlignment="Center"/>
            <Slider x:Name="slider" Minimum="0" Maximum="100" TickFrequency="5" IsSnapToTickEnabled="True"/>
            <Button Content="Shift Right" HorizontalAlignment="Center" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
